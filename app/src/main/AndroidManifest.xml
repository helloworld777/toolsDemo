<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.lxl.lu.toolsample">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppThemeTools">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.lxl.lu.ui.activityani.FiveActivity"></activity>
        <activity android:name="com.lxl.lu.ui.activityani.MainActivity"></activity>
        <activity android:name="com.lxl.lu.ui.activityani.FourActivity"></activity>
        <activity android:name="com.lxl.lu.ui.activityani.SecondActivity"></activity>
        <activity android:name="com.lxl.lu.ui.activityani.ThreeActivity"></activity>
        <activity android:name="com.lxl.lu.ui.activitylol.SampleLolMainActivity"></activity>

        <activity android:name="com.lxl.lu.googlemvp.addedittask.AddEditTaskActivity"/>
        <activity android:name="com.lxl.lu.googlemvp.taskdetail.TaskDetailActivity"/>
        <activity android:name="com.lxl.lu.googlemvp.tasks.TasksActivity"
            android:theme="@style/AppTheme.OverlapSystemBar"/>

        <activity
            android:name="com.lxl.lu.googlemvp.statistics.StatisticsActivity"
            android:parentActivityName="com.lxl.lu.googlemvp.tasks.TasksActivity"
            tools:ignore="UnusedAttribute">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lxl.lu.googlemvp.tasks.TasksActivity" />
        </activity>
    </application>

</manifest>
